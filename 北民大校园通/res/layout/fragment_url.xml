<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background" >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="北方民族大学校园通"
            android:textColor="#008B45"
            android:textSize="20sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:layout_margin="5dip"
            android:background="#008B45" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_layout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/radioGroup_Url"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radioButtonPublicUrl"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/basic_edit_box"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dip"
                    android:text="校外网络服务地址"
                    android:textColor="#80000000" />

                <RadioButton
                    android:id="@+id/radioButtonLocalUrl"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/basic_edit_box"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dip"
                    android:text="校内网络服务地址"
                    android:textColor="#80000000" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>